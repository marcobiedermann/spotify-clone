{
  "name": "spotify-clone",
  "version": "1.0.0",
  "description": "Simple Spotify clone using their Web API.",
  "main": "index.html",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc && vite build",
    "build-storybook": "storybook build",
    "check": "tsc --noEmit",
    "develop": "vite",
    "format": "prettier --ignore-path .gitignore --write .",
    "generate:css": "tcm -p 'src/**/*.module.css' .",
    "generate": "npm-run-all --parallel generate:css",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.css'",
    "lint:js": "eslint .",
    "lint": "npm-run-all --parallel lint:css lint:js",
    "prepare": "husky",
    "serve": "vite preview",
    "storybook": "storybook dev -p 6006",
    "test": "vitest",
    "test:ci": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcobiedermann/spotify-clone.git"
  },
  "keywords": [
    "api",
    "clone",
    "front-end",
    "music",
    "spotify",
    "ui"
  ],
  "author": "Marco Biedermann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcobiedermann/spotify-clone/issues"
  },
  "homepage": "https://github.com/marcobiedermann/spotify-clone#readme",
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@storybook/addon-essentials": "^8.6.3",
    "@storybook/react": "^8.6.3",
    "@storybook/react-vite": "^8.6.3",
    "@storybook/test": "^8.6.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/react-helmet": "^6.1.11",
    "@types/react-test-renderer": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.14.0",
    "happy-dom": "^16.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "msw": "^2.7.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.2",
    "storybook": "^8.6.3",
    "stylelint": "^16.15.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "stylelint-selector-bem-pattern": "^4.0.1",
    "typed-css-modules": "^0.9.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.25.0",
    "vite": "^6.2.0",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.66.11",
    "axios": "^1.8.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^7.54.2",
    "react-router-dom": "^7.2.0",
    "react-use": "^17.6.0",
    "zod": "^3.24.2"
  },
  "lint-staged": {
    "**/*": "npm run format"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
