{
  "name": "spotify-clone",
  "version": "1.0.0",
  "description": "Simple Spotify clone using their Web API.",
  "main": "index.html",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc && vite build",
    "build-storybook": "storybook build",
    "check": "tsc --noEmit",
    "develop": "vite",
    "format": "prettier --ignore-path .gitignore --write .",
    "generate:css": "tcm -p 'src/**/*.module.css' .",
    "generate": "npm-run-all --parallel generate:css",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.css'",
    "lint:js": "eslint .",
    "lint": "npm-run-all --parallel lint:css lint:js",
    "prepare": "husky",
    "serve": "vite preview",
    "storybook": "storybook dev -p 6006",
    "test": "vitest",
    "test:ci": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcobiedermann/spotify-clone.git"
  },
  "keywords": [
    "api",
    "clone",
    "front-end",
    "music",
    "spotify",
    "ui"
  ],
  "author": "Marco Biedermann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcobiedermann/spotify-clone/issues"
  },
  "homepage": "https://github.com/marcobiedermann/spotify-clone#readme",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@eslint/js": "^9.13.0",
    "@storybook/addon-essentials": "^8.3.6",
    "@storybook/react": "^7.0.24",
    "@storybook/react-vite": "^7.0.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.0.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-helmet": "^6.1.11",
    "@types/react-test-renderer": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "@vitest/coverage-v8": "^2.1.4",
    "babel-loader": "^8.3.0",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "globals": "^15.11.0",
    "happy-dom": "^15.7.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "msw": "^2.5.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "storybook": "^7.0.24",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "stylelint-selector-bem-pattern": "^4.0.1",
    "typed-css-modules": "^0.9.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.10",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.59.16",
    "axios": "^1.7.7",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^7.53.1",
    "react-router-dom": "^6.27.0",
    "react-use": "^17.5.1",
    "zod": "^3.23.8"
  },
  "lint-staged": {
    "**/*": "npm run format"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
