{
  "name": "spotify-clone",
  "version": "1.0.0",
  "description": "Simple Spotify clone using their Web API.",
  "main": "index.html",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc && vite build",
    "build-storybook": "storybook build",
    "check": "tsc --noEmit",
    "develop": "vite",
    "format": "prettier --ignore-path .gitignore --write .",
    "generate:css": "tcm -p 'src/**/*.module.css' .",
    "generate": "npm-run-all --parallel generate:css",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.css'",
    "lint:js": "eslint --ignore-path .gitignore .",
    "lint": "npm-run-all --parallel lint:css lint:js",
    "prepare": "husky",
    "serve": "vite preview",
    "storybook": "storybook dev -p 6006",
    "test": "vitest",
    "test:ci": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcobiedermann/spotify-clone.git"
  },
  "keywords": [
    "api",
    "clone",
    "front-end",
    "music",
    "spotify",
    "ui"
  ],
  "author": "Marco Biedermann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcobiedermann/spotify-clone/issues"
  },
  "homepage": "https://github.com/marcobiedermann/spotify-clone#readme",
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@storybook/addon-essentials": "^7.0.4",
    "@storybook/react": "^7.0.24",
    "@storybook/react-vite": "^7.0.4",
    "@testing-library/react": "^15.0.7",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-helmet": "^6.1.11",
    "@types/react-test-renderer": "^18.0.7",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "@vitest/coverage-v8": "^1.5.2",
    "babel-loader": "^8.3.0",
    "eslint": "^9.8.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "happy-dom": "^14.7.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "msw": "^2.2.14",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "storybook": "^7.0.24",
    "stylelint": "^16.8.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "stylelint-selector-bem-pattern": "^4.0.0",
    "typed-css-modules": "^0.9.1",
    "typescript": "^5.5.2",
    "vite": "^5.3.2",
    "vitest": "^1.5.2"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.32.0",
    "axios": "^1.6.8",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^7.51.3",
    "react-router-dom": "^6.23.1",
    "react-use": "^17.5.1",
    "zod": "^3.23.4"
  },
  "lint-staged": {
    "**/*": "npm run format"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
