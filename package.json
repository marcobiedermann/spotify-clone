{
  "name": "spotify-clone",
  "version": "1.0.0",
  "description": "Simple Spotify clone using their Web API.",
  "main": "index.html",
  "private": true,
  "scripts": {
    "build": "tsc && vite build",
    "check": "tsc --noEmit",
    "develop": "vite",
    "format": "prettier --ignore-path .gitignore --write .",
    "generate:css": "tcm -p 'src/**/*.module.css' .",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.css'",
    "lint:js": "eslint --ignore-path .gitignore .",
    "lint": "npm-run-all --parallel lint:css lint:js",
    "serve": "vite preview",
    "test": "jest --maxWorkers=50% --watch",
    "test:ci": "jest --ci --coverage --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcobiedermann/spotify-clone.git"
  },
  "keywords": [
    "api",
    "clone",
    "front-end",
    "music",
    "spotify",
    "ui"
  ],
  "author": "Marco Biedermann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcobiedermann/spotify-clone/issues"
  },
  "homepage": "https://github.com/marcobiedermann/spotify-clone#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@testing-library/react": "^12.1.4",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/qs": "^6.9.7",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/react-helmet": "^6.1.5",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vitejs/plugin-react": "^1.3.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "msw": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "stylelint": "^14.8.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-selector-bem-pattern": "^2.1.1",
    "ts-node": "^10.7.0",
    "typed-css-modules": "^0.7.0",
    "typescript": "^4.6.3",
    "vite": "^2.9.1"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "date-fns": "^2.28.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.3.0",
    "swr": "^1.3.0"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
